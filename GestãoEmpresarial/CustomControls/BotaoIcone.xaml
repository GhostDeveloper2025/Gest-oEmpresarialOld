<StackPanel x:Class="GestãoEmpresarial.CustomControls.BotaoIcone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestãoEmpresarial.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Orientation="Horizontal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:PackIcon Height="40" Width="40" Kind="{Binding Path=Icone}" Style="{StaticResource IconsButtonGlobal}"/>
    <TextBlock Text="{Binding Texto}" Style="{StaticResource ButtonText}"/>
</StackPanel>
