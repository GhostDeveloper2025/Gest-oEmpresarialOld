<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="FormComboBox"
           BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}"
           TargetType="ComboBox">
        <Setter Property="Width" Value="200" />
        <Setter Property="Padding" Value="2,10,0,0" />
        <Setter Property="FontSize" Value="15" />
        <!--<Setter Property="FontWeight" Value="Medium"></Setter>-->
        <Setter Property="FontFamily" Value="{DynamicResource CustomFont4}" />
        <Setter Property="Background" Value="{StaticResource PrimaryColor2}" />
        <Setter Property="Foreground" Value="{StaticResource FontColor1}" />
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor3}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="IsReadOnly" Value="True" />

        <Style.Triggers>
            <Trigger Property="IsDropDownOpen" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor2}" />
                <Setter Property="Foreground" Value="{StaticResource FontColor1}" />
            </Trigger>
            <Trigger Property="IsDropDownOpen" Value="False">
                <Setter Property="Background" Value="{StaticResource PrimaryColor2}" />
                <Setter Property="Foreground" Value="{StaticResource FontColor1}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>