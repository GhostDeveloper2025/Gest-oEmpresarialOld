    <!--  ToggleButton Pesquisar  -->
    <Style x:Key="ToggleButtonPesquisarStyle"
           BasedOn="{StaticResource MaterialDesignActionToggleButton}"
           TargetType="ToggleButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColor3}" />
        <Setter Property="Background" Value="{StaticResource PrimaryColor2}" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="ToolTip" Value="Clique Para Fazer A Busca" />
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Width="30"
                                         Height="30"
                                         Kind="ArrowRightBoldCircleOutline" />
            </Setter.Value>
        </Setter>
        <Setter Property="materialDesign:ToggleButtonAssist.OnContent">
            <Setter.Value>
                <materialDesign:PackIcon Width="30"
                                         Height="30"
                                         Kind="CheckboxMarkedCircleOutline" />
            </Setter.Value>
        </Setter>

        <!--  Trigger para mudar a cor ao passar o mouse  -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor2}" />
                <Setter Property="Foreground" Value="{StaticResource PrimaryColor5}" />
            </Trigger>
        </Style.Triggers>
    </Style>

