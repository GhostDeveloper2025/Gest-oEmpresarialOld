<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Estilo para ToolTip -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource color37}"/>
        <Setter Property="Foreground" Value="{StaticResource color63}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color37}"/>
        <Setter Property="FontFamily" Value="{DynamicResource CustomFont4}" />
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>