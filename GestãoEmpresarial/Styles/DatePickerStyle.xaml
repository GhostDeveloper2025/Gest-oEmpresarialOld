<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region DatePicker...-->
    <Style x:Key="StyleDP"
           BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}"
           TargetType="DatePicker">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Padding" Value="5" />

        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="{DynamicResource CustomFont4}" />

        <Setter Property="Background" Value="{DynamicResource SecundaryTransparenteColor}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryDatePickerColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryDatePickerColor}" />
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style BasedOn="{StaticResource StyleDP}"
           TargetType="DatePicker" />
    <!--#endregion-->

</ResourceDictionary>