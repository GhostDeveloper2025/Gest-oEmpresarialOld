<UserControl x:Class="GestãoEmpresarial.Views.Layout.LayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GestãoEmpresarial.Views.Layout"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Background="{StaticResource PrimaryColor0}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--  Painel De Informações:  -->
                <local:MenuView Grid.Row="0" />
                <StackPanel Grid.Row="1">
                    <TextBlock Margin="10"
                               FontFamily="{StaticResource CustomFont3}"
                               FontSize="12"
                               Foreground="{StaticResource FontColor7}"
                               Text=" Versão 1.0" />
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <busyIndicator:BusyMask x:Name="BusyIndicator"
                                Background="Transparent"
                                BusyContent=""
                                DockPanel.Dock="Bottom"
                                IndicatorType="BouncingDot">
            <Border Margin="10,10,10,10"
                    Background="{StaticResource PrimaryColor0}"
                    CornerRadius="10">
                <DockPanel>
                    <local:TituloModelo Margin="10,10,10,10"
                                        HorizontalAlignment="Left"
                                        DockPanel.Dock="Top" />
                    <Grid Name="fContainer"
                          Margin="10,10,10,10"
                          Background="{StaticResource PrimaryColor0}" />
                </DockPanel>
            </Border>
        </busyIndicator:BusyMask>
    </DockPanel>
</UserControl>
