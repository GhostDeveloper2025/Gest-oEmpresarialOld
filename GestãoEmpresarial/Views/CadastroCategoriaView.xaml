<UserControl x:Class="GestãoEmpresarial.Views.CadastroCategoriaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestãoEmpresarial.Views"
             xmlns:utils="clr-namespace:GestãoEmpresarial.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding ObjectoEditar.IdCategoria}"/>
        <UniformGrid>
            <TextBox Text="{Binding ObjectoEditar.Nome, 
            Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
            Converter={utils:CapitalizeWordsConverter}}">
            </TextBox>
            <TextBox 
            AcceptsReturn="True" 
            TextWrapping="Wrap" 
            MaxLines="1" 
            MaxLength="150"
            VerticalAlignment="Stretch"                       
            Text="{Binding ObjectoEditar.Descricao, 
            Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
            Converter={utils:CapitalizeWordsConverter}}">
            </TextBox>
        </UniformGrid>
    </StackPanel>
</UserControl>
