<WrapPanel x:Class="GestãoEmpresarial.Views.Pesquisa.BarraPesquisaClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GestãoEmpresarial.Views.Pesquisa"
             xmlns:utils="clr-namespace:GestãoEmpresarial.Utils"
             xmlns:cc="clr-namespace:GestãoEmpresarial.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox materialDesign:HintAssist.Hint="Nome" Text="{Binding PesquisaNome, 
        UpdateSourceTrigger=PropertyChanged, 
        Converter={utils:CapitalizeWordsConverter}}" 
             utils:FocusExtension.IsFocused="{Binding IsTextBoxFocused, Mode=TwoWay}"
             utils:EnterKeyBehavior.EnterCommand="{Binding PesquisarCommand}"
             ToolTip="Digite O Nome!"></TextBox>
    <cc:CelularTextBox Text="{Binding PesquisaCelular, UpdateSourceTrigger=PropertyChanged}" ToolTip="Digite O Celular!" utils:EnterKeyBehavior.EnterCommand="{Binding PesquisarCommand}"></cc:CelularTextBox>
    <cc:CpfTextBox Text="{Binding PesquisaCPF, UpdateSourceTrigger=PropertyChanged}" ToolTip="Digite O CPF!" utils:EnterKeyBehavior.EnterCommand="{Binding PesquisarCommand}"></cc:CpfTextBox>
    <cc:CnpjTextBox Text="{Binding PesquisaCNPJ, UpdateSourceTrigger=PropertyChanged}" ToolTip="Digite O CNPJ!" utils:EnterKeyBehavior.EnterCommand="{Binding PesquisarCommand}"></cc:CnpjTextBox>
    
</WrapPanel>
