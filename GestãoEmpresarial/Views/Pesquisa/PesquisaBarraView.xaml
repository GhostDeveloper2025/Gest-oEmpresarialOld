<WrapPanel x:Class="GestãoEmpresarial.Views.Pesquisa.PesquisaBarraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GestãoEmpresarial.Views.Pesquisa"
             xmlns:utils="clr-namespace:GestãoEmpresarial.Utils"
             mc:Ignorable="d" 
             HorizontalAlignment="Right"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox 
                    MinWidth="100"
                     Text="{Binding FiltroGlobal, UpdateSourceTrigger=PropertyChanged,  
                    Converter={utils:CapitalizeWordsConverter}}"/>
    
    <Button x:Name="btnBuscar" Style="{StaticResource SearchButtonStyle}"
        Height="30" Width="30" 
        Margin="0,0,10,0"
        HorizontalAlignment="Right"                        
        Tag="{StaticResource color7}"
        Command="{Binding PesquisarCommand, UpdateSourceTrigger=PropertyChanged}">
        <!-- Muda A Cor Do Icone... -->
        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon  Height="30" Width="30" Kind="ArrowRight"/>
        </StackPanel>
    </Button>
</WrapPanel>
