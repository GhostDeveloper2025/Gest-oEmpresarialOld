<UserControl x:Class="GestãoEmpresarial.Views.Relatorios.RelatorioComissao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestãoEmpresarial.Views.Relatorios"
             xmlns:providers="clr-namespace:GestãoEmpresarial.Providers"
             xmlns:utils="clr-namespace:GestãoEmpresarial.Utils"
             xmlns:cc="clr-namespace:GestãoEmpresarial.CustomControls"
             xmlns:wpfcc="http://wpfcontrols.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <wpfcc:AutoCompleteTextBox  
                Width="250" 
                materialDesign:HintAssist.Hint="Vendedor" 
                DisplayMember="Nome"
                Provider="{providers:ColaboradorVendedorProvider}" 
                SelectedItem="{Binding ColaboradorSelecionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <wpfcc:AutoCompleteTextBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Nome}"/>
                        </StackPanel>
                    </DataTemplate>
                </wpfcc:AutoCompleteTextBox.ItemTemplate>
            </wpfcc:AutoCompleteTextBox>

            <DatePicker materialDesign:HintAssist.Hint="Data Inicial" SelectedDate="{Binding DataInicial, Mode=TwoWay}" />
            <DatePicker materialDesign:HintAssist.Hint="Data Final" SelectedDate="{Binding DataFinal, Mode=TwoWay}" />
            
            <ToggleButton x:Name="TgbBuscar"
                          Style="{StaticResource ToggleButtonPesquisarStyle}"
                          Command="{Binding BuscarComissaoCommand}"
                          Checked="ToggleButton_Checked"/>
        </StackPanel>
        
        <cc:DataGridAuto Grid.Row="1" ItemsSource="{Binding ListaComissaoVendas, Mode=OneWay}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <cc:MoedaTextBox materialDesign:HintAssist.Hint="Total Vendido" IsReadOnly="True" Text="{Binding TotalVendido, Mode=OneWay, Converter={utils:DecimalConverter}}"/>
            <cc:MoedaTextBox materialDesign:HintAssist.Hint="Total Comissão" IsReadOnly="True" Text="{Binding TotalComissao, Mode=OneWay, Converter={utils:DecimalConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>
